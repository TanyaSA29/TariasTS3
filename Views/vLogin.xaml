<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TariasTS3.Views.vLogin"
             Title="vLogin">
    <!--ESTILOS EXPLIXITOS-->
    <ContentPage.Resources>
        <Style x:Key="EstiloLabel" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextColor" Value="red"/>
        </Style>
        <Style x:Key="EstiloEntry" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="aqua"/>
        </Style>
        </ContentPage.Resources>

    <VerticalStackLayout
        Padding="30"
        Spacing="30">
        <Label 
            Style="{StaticResource EstiloLabel}"
            Text="Login: Semana 3"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="txtUsuario"
               Style="{StaticResource EstiloEntry}"
               Placeholder="Ingresar el Usuario"/>
        <Entry x:Name="txtContrasena"        
                 Style="{StaticResource EstiloEntry}"
                Placeholder="Ingresar la Contrasena"
                IsPassword="True"/>
        <Button x:Name="btnIniciarSesion"
                Style="{StaticResource globalbutton}"
                Text="Iniciar Sesion"
                Clicked="btnIniciarSesion_Clicked"/>
        <Button x:Name="btnRegistro"
                Style="{StaticResource globalbutton}"
                Text="Registrar"
                Clicked="btnRegistro_Clicked"/>
    </VerticalStackLayout>
</ContentPage>